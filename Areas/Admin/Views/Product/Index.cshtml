@model IEnumerable<QuanLyGameConsole.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        @TempData["error"]
    </div>
}

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Thêm sản phẩm mới</a>


<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th>Chỉnh sửa / Ẩn - Hiển thị</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@product.Image" alt="@product.Image"
                         style="width: 50px; height: 50px; object-fit: cover;" />
                </td>
                <td>@product.ProductName</td>
                <td>@product.Category?.CategoryName</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>
                    @if (product.Status == 1)
                    {
                        <span class="badge bg-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <!-- Nút Chỉnh sửa -->
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <!-- Nút Xóa -->
                    <form asp-action="Delete" asp-route-id="@product.ProductId" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này không?');">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                    <!-- Nút Ẩn / Hiển thị -->
                    @if (product.Status == 1)
                    {
                        <form asp-action="HideProduct" asp-route-id="@product.ProductId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-secondary btn-sm">Ẩn sản phẩm</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ShowProduct" asp-route-id="@product.ProductId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Hiển thị lại</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
