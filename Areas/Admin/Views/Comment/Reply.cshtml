@model QuanLyGameConsole.Models.ProductComment

@{
    ViewData["Title"] = "Trả lời bình luận";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-reply-fill me-2"></i> Trả lời bình luận
            </h4>
        </div>
        <div class="card-body">
            <!-- Thông tin bình luận -->
            <div class="mb-4">
                <p><strong><i class="bi bi-person-fill me-1"></i> Người bình luận:</strong> @Model.Customer?.FullName</p>
                <p><strong><i class="bi bi-box-seam me-1"></i> Sản phẩm:</strong> @Model.Product?.ProductName</p>
                <p><strong><i class="bi bi-chat-text-fill me-1"></i> Bình luận:</strong> <span class="text-muted">@Model.Contents</span></p>
            </div>

            <!-- Form trả lời -->
            <form asp-action="Reply" method="post">
                <input type="hidden" name="id" value="@Model.CommentId" />
                <div class="form-group mb-3">
                    <label for="reply" class="form-label fw-bold">
                        <i class="bi bi-pencil-square me-1"></i> Nội dung trả lời
                    </label>
                    <textarea name="reply" class="form-control border-primary shadow-sm fs-5"
                              rows="8"
                              style="min-height: 200px; font-size: 1.1rem; padding: 15px;"
                              placeholder="Nhập nội dung trả lời...">@Model.Reply</textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send-fill me-1"></i> Gửi trả lời
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
