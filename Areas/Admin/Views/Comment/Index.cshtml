@model IEnumerable<QuanLyGameConsole.Models.ProductComment>

@{
    ViewData["Title"] = "Quản Lý Bình Luận";
}

<h1 class="mb-4 text-primary">Quản Lý Bình Luận</h1>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr class="text-center">
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Khách hàng</th>
            <th>Sản phẩm</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Contents)</td>
                <td class="text-center">
                    @(item.CreatedAt.HasValue
                        ? item.CreatedAt.Value.ToString("dd/MM/yyyy")
                        : "")
                </td>
                <td>@item.Customer?.FullName </td>
                <td>@item.Product?.ProductName</td>
                <td class="text-center">
                    <a asp-action="Reply" asp-route-id="@item.CommentId" class="btn btn-sm btn-success">
                        <i class="bi bi-reply-fill"></i> Trả lời
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-sm btn-danger me-1">
                        <i class="bi bi-trash"></i> Xoá
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
