@{
    ViewData["Title"] = "Đơn hàng";
}
@model IEnumerable<QuanLyGameConsole.Models.Bill>

<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Tài Khoản Của Tôi</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                                <li class="active" aria-current="page">@ViewBag.Title</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Breadcrumb Section:::... -->
<!-- ...:::: Start Account Dashboard Section:::... -->
<div class="account-dashboard">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-3 col-lg-3">
                <!-- Nav tabs -->
                <div class="dashboard_tab_button" data-aos="fade-up" data-aos-delay="0">
                    <ul role="tablist" class="nav flex-column dashboard-list">
                        <li>
                            <a asp-controller="Account" asp-action="Order"
                            class="nav-link btn btn-block btn-md btn-black-default-hover active">Đơn hàng</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Index"
                            class="nav-link btn btn-block btn-md btn-black-default-hover">Thông tin cá nhân</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Favorite"
                            class="nav-link btn btn-block btn-md btn-black-default-hover">Yêu Thích</a>
                        </li>
                        <li>
                            <a asp-controller="Account" asp-action="Logout"
                            class="nav-link btn btn-block btn-md btn-black-default-hover">Đăng xuất</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12 col-md-9 col-lg-9">
                <!-- Tab panes -->
                <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">

                    <div class="tab-pane fade show active">
                        <h4>Đơn hàng</h4>

                        <div class="row">
                            <form method="get" class="mb-3" id="filterForm">
                                @Html.AntiForgeryToken()

                                <select id="statusFilter" name="status" onchange="this.form.submit()">

                                    <option value="">Tất cả</option>

                                    <option value="1">Chưa thanh toán</option>

                                    <option value="2">Đã thanh toán</option>

                                    <option value="3">Đã hủy</option>

                                </select>

                            </form>
                        </div>

                        <div class="table_page table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th>Họ tên</th>
                                        <th>Trạng thái</th>
                                        <th>Tổng tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!Model.Any())
                                    {
                                        <p>Không có đơn hàng nào.</p>
                                    }
                                    else
                                    {
                                        @foreach (var bill in Model)
                                        {
                                            <tr>
                                                <td>@bill.BillId</td>
                                                <td>@bill.OrderDate.ToString("dd-MM-yyyy")</td>
                                                <td>@bill.FullName</td>
                                                <td>
                                                    <span id="status-@bill.BillId" class="@(bill.Status == 1 ? "warning" : bill.Status == 2 ? "success" : "danger")">
                                                        @(bill.Status == 1 ? "Chưa thanh toán" : bill.Status == 2 ? "Đã thanh toán" : "Đã hủy")
                                                    </span>
                                                </td>
                                                <td>@bill.Total.ToString("C")</td>
                                                <td class="action-cell">
                                                    <!-- Chỉ hiển thị các nút hành động khi đơn hàng ở trạng thái "Chưa thanh toán" -->
                                                    @if (bill.Status == 1)
                                                    {
                                                        <!-- Nút Xác nhận Thanh toán -->
                                                        <button type="button" class="btn btn-success btn-sm btn-confirm-payment" data-bill-id="@bill.BillId">
                                                            Xác nhận thanh toán
                                                        </button>

                                                        <!-- Nút Hủy -->
                                                        <form method="post" action="@Url.Action("CancelOrder", "Account")" style="display:inline;" class="form-cancel">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@bill.BillId" />
                                                            <button type="submit" class="btn btn-black-default-hover btn-sm" onclick="return confirm('Bạn có chắc muốn hủy đơn hàng này?');">Hủy</button>
                                                        </form>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Account Dashboard Section:::... -->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-confirm-payment').forEach(button => {
                button.addEventListener('click', function () {
                    const currentButton = this; // <-- Lấy tham chiếu đến nút vừa nhấn
                    const billId = currentButton.dataset.billId;
                    const row = currentButton.closest('tr');
                    const token = document.querySelector('#filterForm input[name="__RequestVerificationToken"]').value;

                    if (!confirm('Bạn có chắc chắn đã nhận hàng và muốn xác nhận thanh toán cho đơn hàng này?')) {
                        return;
                    }

                    // --- GIẢI PHÁP: VÔ HIỆU HÓA NÚT NGAY LẬP TỨC ---
                    currentButton.disabled = true;
                    currentButton.textContent = 'Đang xử lý...'; // Thay đổi chữ để người dùng biết

                    fetch('/Account/ConfirmPayment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: `id=${billId}`
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const statusSpan = document.getElementById(`status-${billId}`);
                            if (statusSpan) {
                                statusSpan.textContent = 'Đã thanh toán';
                                statusSpan.className = 'success';
                            }

                            const actionCell = row.querySelector('.action-cell');
                            if (actionCell) {
                                actionCell.innerHTML = ''; // Xóa các nút đi
                            }
                            // Không cần alert thành công nữa vì giao diện đã tự cập nhật
                        } else {
                            alert(data.message || 'Có lỗi xảy ra, vui lòng thử lại.');
                            // Kích hoạt lại nút nếu có lỗi để người dùng thử lại
                            currentButton.disabled = false;
                            currentButton.textContent = 'Xác nhận thanh toán';
                        }
                    })
                    .catch(error => {
                        console.error('Chi tiết lỗi:', error);
                        alert('Đã có lỗi kết nối hoặc lỗi xử lý xảy ra.');
                        // Kích hoạt lại nút nếu có lỗi để người dùng thử lại
                        currentButton.disabled = false;
                        currentButton.textContent = 'Xác nhận thanh toán';
                    });
                });
            });
        });
    </script>
}